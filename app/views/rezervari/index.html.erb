<div class="container mt-5 text-center">
	<h1>Rezervari</h1>
	<%= month_calendar(events: @eveniments) do |date,eveniments|%>
		<div class="day">
			<%= date.day%>
		</div>
		<% eveniments.each do |eveniment| %>
      <div class="card-header">
			<h7 class="card-title">
				<%= link_to eveniment.titlu, eveniment %>
			</h7>
		</div>
		<div class="card-body">
			<p class="card-text">
				<%= eveniment.descriere %>
			</p>
		</div>
		<div class="card-footer">
			<p class="card-text">
				From: <%= eveniment.start_time.strftime('%A, %B %d, %Y at %I:%M %p') %>
			</p>
			<p class="card-text">
				To: <%= eveniment.end_time.strftime('%A, %B %d, %Y at %I:%M %p') %>
			</p>
		</div>
			<%end%>
		<%end%>
</div>
